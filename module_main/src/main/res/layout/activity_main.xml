<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnCommonList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="列表" />

    <Button
        android:id="@+id/btnDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="弹窗样式" />


    <Button
        android:id="@+id/btnViewPager2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="垂直滑动viewPager2" />

    <Button
        android:id="@+id/jumpWebView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转webView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEventBusTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EventBus测试" />

        <TextView
            android:id="@+id/tvShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认文案" />

    </LinearLayout>


    <Button
        android:id="@+id/easyPhotosCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="easyPhotos" />

    <Button
        android:id="@+id/jumpMagicIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MagicIndicator" />

    <Button
        android:id="@+id/requestPermissionX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PermissionX" />

    <Button
        android:id="@+id/requestRxPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RxPermission" />

    <Button
        android:id="@+id/apkDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="apk下载" />

    <Button
        android:id="@+id/network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rxJava+retrofit网络请求" />

</LinearLayout>