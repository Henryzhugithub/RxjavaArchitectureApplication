<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingStart="@dimen/common_dp_16"
        android:paddingTop="@dimen/common_dp_16"
        android:paddingEnd="@dimen/common_dp_16"
        android:textColor="@color/gray3"
        android:textSize="@dimen/common_sp_16"
        android:textStyle="bold"
        tools:text="提示" />


    <TextView
        android:id="@+id/tvDialogContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:minWidth="300dp"
        android:minHeight="120dp"
        android:paddingStart="@dimen/common_dp_16"
        android:paddingTop="@dimen/common_dp_16"
        android:paddingEnd="@dimen/common_dp_16"
        android:paddingBottom="@dimen/common_dp_25"
        android:text=""
        android:textColor="@color/gray3"
        android:textSize="@dimen/common_sp_16"
        tools:text="弹窗内容弹窗内容" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dp_1"
        android:background="#E3E4E5" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvDialogCancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_dp_46"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/common_theme_color"
            android:textSize="@dimen/common_sp_16"
            tools:text="取消" />

        <TextView
            android:layout_width="@dimen/common_dp_1"
            android:layout_height="match_parent"
            android:background="#E3E4E5" />

        <TextView
            android:id="@+id/tvDialogConfirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_dp_46"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/common_theme_color"
            android:textSize="@dimen/common_sp_16"
            tools:text="确定" />

    </LinearLayout>


</LinearLayout>